<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/mammoth.log</file>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%-10thread] %-5level %-4line %-34logger{32}: %msg%n</pattern>
        </encoder>
    </appender>
    
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%-10thread] %-5level %-4line %-34logger{32}: %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.makolab" level="DEBUG" />
    <logger name="com.makolab.rnd.mammoth.persistence.repository.Rdf4jRepository" level="TRACE" />
    <logger name="com.makolab.rnd.mammoth.persistence.RepositoryManager" level="TRACE" />
    <logger name="org.eclipse.rdf4j.repository" level="DEBUG" />

    <root level="INFO">
        <appender-ref ref="FILE" />
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>